# UniYield Interface - Environment Variables
# Copy to .env and fill in values

# --- Vault & Chain ---
# ERC-4626 vault (UniYield Diamond) on Base
VITE_UNIYIELD_VAULT_ADDRESS=0x95A578Aa0aDDe49cb638745c86C27117AD00067c
# Chain ID for vault (Base = 8453)
VITE_CHAIN_ID=8453

# --- LiFi ---
# Optional. Higher rate limits for LI.FI API
VITE_LIFI_API_KEY=

# --- RPC (optional) ---
# Base mainnet RPC for reads (default: https://mainnet.base.org)
VITE_BASE_RPC=

# --- Development / Mock ---
# true = use mock vault and mock data (default)
VITE_USE_MOCK_VAULT=true
# true = demo mode (e.g. demo user when no wallet connected)
VITE_DEMO_MODE=false

# --- Optional ---
# Override USDC address (if unset, read from vault.asset())
# VITE_USDC_ADDRESS=
